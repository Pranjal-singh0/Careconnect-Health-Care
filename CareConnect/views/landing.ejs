    <a href="/login" class="btn btn-light btn-lg mt-3 shadow">Get Started</a>
  </section>

  <!-- About Section -->
  <section id="about" class="container my-5">
    <h2 class="text-center mb-4">About CareConnect</h2>
    <p class="text-center">CareConnect integrates medical inventory tracking and mental health support into one unified platform. We aim to provide hospitals, clinics, and individuals with tools for healthcare efficiency and emotional well-being.</p>
  </section>

  <!-- Features Section -->
  <section id="features" class="container my-5">
    <h2 class="text-center mb-4">Our Features</h2>
    <div class="row text-center">
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm p-3">
          <h5>üì¶ Inventory Management</h5>
          <p>Track medicines and medical supplies with alerts for low stock.</p>
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm p-3">
          <h5>üí¨ Mental Health Chat</h5>
